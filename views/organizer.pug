                                //-     b Link 4-5:
                                //-     |  #{card.link45}

                                //- p
                                //-     b Variable 5:
                                //-     |  #{card.var5}


                                br
                                form(method='POST', action='/organizerdelete')
                                    input(type='submit', name=card.id, value='delete')
